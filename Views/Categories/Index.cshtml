@model IEnumerable<TechnicalTest.Models.Category>

@{
    ViewBag.Title = "Categories";
    ViewBag.Controller = "Categories";
}
<br />
<br />
<h2>Categories</h2>
<hr />
@Html.Partial("_IndexAlert")
<br />
<p>
    @Html.ActionLink("Create new category", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped table-secondary table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width: 100px">
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                    <button type="button" class="btn btn-danger delete-btn" data-bs-toggle="modal" data-bs-target="#deleteModal" delete-value="@item.Id">
                        Delete
                    </button>
                </td>
            </tr>
        }
    </tbody>
    @Html.Partial("_DeleteModal")
</table>

<!--Modal button DELETE-->
@section scripts{
    <script>
        $(document).ready(function () {
            var idDelete;
            $('.delete-btn').click(function () {
                idDelete = $(this).attr('delete-value');
                $('.delete-input-value').val(idDelete);
            });
        })
    </script>
}
