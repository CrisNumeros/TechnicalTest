<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="color: black">Confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" style="color: black">
                Are you sure you want to delete this?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Delete", (string)@ViewBag.Controller, FormMethod.Post, new { id = "form-id" }))
                {
                    @Html.AntiForgeryToken()

                    <input class="delete-input-value" id="id" name="id" hidden value="-1" />
                    <button type="submit" class="btn btn-danger" id="submit-button">Delete</button>
                    <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
                }
            </div>
        </div>
    </div>
</div>

